<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/background_light">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/settingsfragment_backButton"
        android:background="@drawable/ic_home_black_24dp"
        android:backgroundTint="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speicherintervall [min]:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/settingsframent_reprateText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es werden 240 Werte gespeichert. 6min = Werte für einen Tag."
        android:textSize="10dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/settingsframent_reprateText"
        android:layout_marginBottom="-30dp"
        android:textColor="@color/design_default_color_primary_dark"/>

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:id="@+id/settingsfragment_reprate_edit"
        android:layout_alignLeft="@+id/settingsframent_reprateText"
        android:layout_marginLeft="155dp"
        android:layout_alignTop="@+id/settingsframent_reprateText"
        android:layout_marginTop="-13dp"
        android:enabled="false"
        android:text="9999999"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignBottom="@+id/settingsframent_reprateText"
        android:id="@+id/settingsfragment_viewline1"
        android:layout_marginBottom="-35dp"
        android:background="@android:color/darker_gray"></View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/settingsfragment_viewline1"
        android:layout_marginBottom="-35dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/settingsframent_gwerteText"
        android:text="Grenzwerte Ausgang schalten"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatur [°C]:"
        android:layout_alignBottom="@+id/settingsframent_gwerteText"
        android:layout_marginBottom="-45dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/settingsframent_criticTemp"/>

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:id="@+id/settingsfragment_criticTemp_edit"
        android:layout_alignRight="@+id/settingsfragment_reprate_edit"
        android:layout_alignTop="@+id/settingsframent_criticTemp"
        android:layout_marginTop="-13dp"
        android:enabled="false"
        android:text="9999999"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Druck [mBar]:"
        android:layout_alignBottom="@+id/settingsframent_criticTemp"
        android:layout_marginBottom="-45dp"
        android:layout_alignRight="@+id/settingsframent_criticTemp"
        android:id="@+id/settingsframent_criticPressure"/>

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:id="@+id/settingsfragment_criticPressure_edit"
        android:layout_alignRight="@+id/settingsfragment_reprate_edit"
        android:layout_alignTop="@+id/settingsframent_criticPressure"
        android:layout_marginTop="-13dp"
        android:enabled="false"
        android:text="9999999"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="CO2 [ppm]:"
    android:layout_alignBottom="@+id/settingsframent_criticPressure"
    android:layout_marginBottom="-45dp"
    android:layout_alignRight="@+id/settingsframent_criticPressure"
    android:id="@+id/settingsframent_criticco2"/>

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:id="@+id/settingsfragment_criticco2_edit"
        android:layout_alignRight="@+id/settingsfragment_reprate_edit"
        android:layout_alignTop="@+id/settingsframent_criticco2"
        android:layout_marginTop="-13dp"
        android:enabled="false"
        android:text="9999999"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luftfeuchte [%]:"
        android:layout_alignBottom="@+id/settingsframent_criticco2"
        android:layout_marginBottom="-45dp"
        android:layout_alignRight="@+id/settingsframent_criticco2"
        android:id="@+id/settingsframent_criticHumidity"/>

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:id="@+id/settingsfragment_criticHumidity_edit"
        android:layout_alignRight="@+id/settingsfragment_reprate_edit"
        android:layout_alignTop="@+id/settingsframent_criticHumidity"
        android:layout_marginTop="-13dp"
        android:enabled="false"
        android:text="9999999"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOC [ppb]:"
        android:layout_alignBottom="@+id/settingsframent_criticHumidity"
        android:layout_marginBottom="-45dp"
        android:layout_alignRight="@+id/settingsframent_criticHumidity"
        android:id="@+id/settingsframent_criticVOC"/>

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:id="@+id/settingsfragment_criticVOC_edit"
        android:layout_alignRight="@+id/settingsfragment_reprate_edit"
        android:layout_alignTop="@+id/settingsframent_criticVOC"
        android:layout_marginTop="-13dp"
        android:enabled="false"
        android:text="9999999"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:text="(n.a. °C)"
        android:textStyle="italic"
        android:layout_alignBottom="@id/settingsframent_criticTemp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/settingsfragment_akttemp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:text="(n.a. mBar)"
        android:textStyle="italic"
        android:layout_alignBottom="@id/settingsframent_criticPressure"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/settingsfragment_aktpressure"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:text="(n.a. ppm)"
        android:textStyle="italic"
        android:layout_alignBottom="@id/settingsframent_criticco2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/settingsfragment_aktco2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:text="(n.a. %)"
        android:textStyle="italic"
        android:layout_alignBottom="@id/settingsframent_criticHumidity"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/settingsfragment_akthumidity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:text="(n.a. ppb)"
        android:textStyle="italic"
        android:layout_alignBottom="@id/settingsframent_criticVOC"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/settingsfragment_aktvoc"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignBottom="@+id/settingsfragment_aktvoc"
        android:id="@+id/settingsfragment_viewline2"
        android:layout_marginBottom="-35dp"
        android:background="@android:color/darker_gray"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ausgang"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/settingsfragment_viewline2"
        android:layout_marginBottom="-40dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_flash_off_black_24dp"
        android:layout_alignBottom="@+id/settingsfragment_viewline2"
        android:layout_marginBottom="-70dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:id="@+id/settingsfragment_outputinactive"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_flash_on_black_24dp"
        android:layout_alignBottom="@+id/settingsfragment_viewline2"
        android:layout_marginBottom="-70dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/settingsfragment_outputactive"/>



    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/settingsfragment_syncButton"
        android:background="@drawable/ic_sync_black_24dp"
        android:backgroundTint="@android:color/darker_gray"
        />



</RelativeLayout>